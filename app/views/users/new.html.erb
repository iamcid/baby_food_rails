<h1><u>Sign Up!</u></h1>

<%= render partial: 'layouts/errors', locals: {object: @user} %>

<div>
<%= form_for (@user) do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %><br><br>

    <%= f.label :password %>
    <%= f.password_field :password %><br><br>

    <%= f.label :baby_name %>
    <%= f.text_field :baby_name %><br><br>

    <%= f.submit  "Sign up"%>
<% end %>
</div>
<br>
<h3>Already have an account? Please <%= link_to 'Login', login_path %>.</h3>