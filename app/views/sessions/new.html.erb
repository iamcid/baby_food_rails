<u><h1>Log In!</h1></u>

<p style="color: red;">
    <%= flash[:message] if flash[:message] %>
</p>

<div>
<%= form_for(:user) do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %><br><br>

    <%= f.label :password %>
    <%= f.password_field :password %><br><br>

    <%= f.submit "Log In" %>
<% end %>
</div>

<h3>or</h3> 


<h3><%= button_to "Log in with Google", '/auth/google_oauth2'  %></h3><br>

<h3>Don't have an account? Please <%= link_to 'Sign Up', signup_path %>.</h3>